@model List<NCKH.Models.Category>

@{
    ViewData["Title"] = "List Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">

            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">List Category</h3>
                    <div class="col-auto text-end float-end ms-auto download-grp">
                        <a href="/Admin/Category" class="btn btn-outline-primary me-2">
                            <i class="fas fa-download"></i> Download
                        </a>
                        <a href="/Admin/Category/CreateCategory" class="btn btn-primary">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="row">
                <div class="card bg-comman w-100">
                    <div class="card-body">

                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th class="text-center">CategoryName</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@item.Id</td>
                                        <td class="text-center">@item.CategoryName</td>
                                        <td class="text-center">
                                            <a href="/Admin/Category/EditCategory?id=@item.Id" class="btn btn-sm btn-warning">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="/Admin/Category/Delete?id=@item.Id" class="btn btn-sm btn-danger">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
